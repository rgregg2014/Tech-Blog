<form class="formParent">
<div class="field">
  <label class="label fontTitle">Username</label>
  <div class="control">
    <input class="input fontSubtitle" type="text" placeholder="e.g superCoolCoder">
  </div>
</div>

<div class="field">
  <label class="label fontTitle">Email</label>
  <div class="control">
    <input class="input fontSubtitle" type="email" placeholder="e.g. sendingemails@gmail.com">
  </div>
</div>

<div class="field">
  <label class="label fontTitle">Password</label>
  <div class="control">
    <input class="input fontSubtitle" type="password" placeholder="Please select a password with 6 or more characters">
  </div>
</div>
<button class="fontTitle button is-dark">Sign Up</button>
</form>

<script src="/js/signup.js"></script>